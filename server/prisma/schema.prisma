generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model News {
  id        Int      @id @default(autoincrement())
  titleRu   String
  titleEn   String?
  contentRu String
  contentEn String?
  photo     String // Основное фото (для обратной совместимости)
  photos    String[] @default([]) // Массив URL фото
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("news")
}

model Order {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  username  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("order")
}
